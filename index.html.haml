              .overlayHolder
                .overlay
                .inner
            %li.item
              %img{:src => "img/revlon-outdoor.png", :alt => "Revlon"}/
              .overlayHolder
                .overlay
                .inner
            %li.item
              %img{:src => "img/accenture-ipad.png", :alt => "Accenture"}/
              .overlayHolder
                .overlay
